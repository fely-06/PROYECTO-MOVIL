<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".Perfil">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/amarillo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MI PERFIL    "
            android:textSize="35sp"
            android:fontFamily="@font/ms"
            android:gravity="right"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileCard"
        android:layout_width="200dp"
        android:contentDescription="Cambiar foto de perfil"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondomenu" />

</com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para cambiar foto, tocar imagen"
        android:textColor="@color/white"
        android:fontFamily="@font/ms"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/ms"
        android:text="NOMBRE DE USUARIO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="60dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:shadowRadius="@integer/material_motion_duration_medium_1"
            android:hint="Usuario"
            android:fontFamily="@font/ms"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="Cambiar Nombre de usuario"
            android:src="@drawable/botoneditar"
            app:tint="@color/amarillo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/ms"
        android:text="CONTRASEÑA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="60dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:shadowRadius="@integer/material_motion_duration_medium_1"
            android:hint="Contraseña"
            android:fontFamily="@font/ms"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="Cambiar Password"
            android:src="@drawable/botoneditar"
            app:tint="@color/amarillo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Permitir Notificaciones"
        android:buttonTint="@color/amarillo"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/ms"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/basura"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Eliminar cuenta"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="650dp"
        app:tint="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="710dp"
        android:fontFamily="@font/ms"
        android:text="Eliminar Cuenta"
        android:textAlignment="center"
        android:textColor="@color/white" />

</FrameLayout>