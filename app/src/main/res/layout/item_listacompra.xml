<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/AmarilloClaro"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Header con checkbox y nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkBoxComprado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/NaranjaFuerte"/>

            <TextView
                android:id="@+id/tvNombreProd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Producto"
                android:textSize="18sp"
                android:fontFamily="@font/ms"
                android:textStyle="bold"
                android:textColor="@color/NaranjaFuerte"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Cantidad necesaria -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Necesario: "
                android:textSize="15sp"
                android:textColor="@color/NaranjaFuerte"/>

            <TextView
                android:id="@+id/tvCantidadNecesaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/NaranjaFuerte"/>

            <TextView
                android:id="@+id/tvUnidadNecesaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gramos"
                android:textSize="15sp"
                android:layout_marginStart="4dp"
                android:textColor="@color/NaranjaFuerte"/>
        </LinearLayout>

        <!-- Cantidad comprada (visible solo cuando estÃ¡ marcado) -->
        <LinearLayout
            android:id="@+id/layoutCantidadComprada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad comprada:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/NaranjaFuerte"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etCantidadComprada"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Cantidad"
                    android:inputType="numberDecimal"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/editext_redondeado"
                    android:textColor="@color/NaranjaFuerte"
                    android:textColorHint="@color/NaranjaFuerte"/>

                <Spinner
                    android:id="@+id/spinnerUnidad"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/editext_redondeado"
                    android:padding="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAgregarInventario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar al Inventario"
                android:textSize="14sp"
                android:backgroundTint="@color/NaranjaFuerte"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>